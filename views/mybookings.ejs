<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Bookings</title>
    <!-- Include any necessary CSS stylesheets -->
    <link rel="stylesheet" href="styles.css" />
    <style>
      body {
        font-family: "Arial", sans-serif;
        background-color: #f0f0db;
        margin: 0;
        padding: 0;
        color: #333;
      }

      h1 {
        text-align: center;
        margin-top: 2rem;
        font-size: 2.5rem;
        color: #555;
      }

      .container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        margin-top: 1rem;
        gap: 0.4rem; /* Adjusted gap */
      }

      .booking-card {
        display: flex;
        flex-direction: row;
        align-items: flex-start;
        padding: 1.5rem;
        border-radius: 10px;
        box-shadow: 0 8px 16px rgba(106, 110, 110, 0.477);
        transition: transform 0.3s ease;
        background-color: #6f9c4d;
        overflow: hidden;
      }

      .booking-card:hover > .booking-card:not(:hover) {
        /* transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(109, 222, 222, 0.477);
        background-color: #ccdfe4; */
        filter: blur(2px);
        transform: scale(0.9, 0.9);
      }

      .booking-details {
        flex: 1 1 auto; /* Allow details to grow */
        padding-right: 1.5rem;
      }

      .booking-image {
        flex: 0 0 auto; /* Fixed size for the image */
        width: 150px; /* Fixed width for the image */
        height: auto; /* Maintain aspect ratio */
        border-radius: 10px;
        object-fit: cover;
        margin-left: 1.5rem;
        transition: opacity 0.3s ease;
      }

      .booking-card:hover .booking-image {
        opacity: 0.8;
      }

      .booking-details h2 {
        margin-bottom: 1rem;
        color: #333;
        font-size: 1.5rem;
      }

      .booking-details p {
        margin-bottom: 0.5rem;
        color: #666;
      }
      .booking-card {
        display: flex;
        flex-direction: row;
        align-items: flex-start;
        padding: 1.5rem;
        border-radius: 10px;
        box-shadow: 0 8px 16px rgba(106, 110, 110, 0.477);
        transition: transform 0.3s ease, filter 0.3s ease;
        background-color: #fff;
        overflow: hidden;
      }

      .booking-card:hover {
        background-color: #d4f7f7;
        transform: translateY(-5px);
        filter: brightness(95%); /* Adjust brightness for hover effect */
      }

      .booking-card img {
        transition: transform 0.3s ease;
      }

      .booking-card:hover img {
        transform: scale(1.27); /* Adjust scale for hover effect */
      }

      /* Additional styling as needed */
    </style>
  </head>
  <body>
    <h1>My Bookings</h1>
    <div id="bookings-list">
      <% bookings.forEach(booking => { %>
      <div class="container">
        <div class="booking-card">
          <div class="booking-details">
            <h2><%= booking.package_name %></h2>
            <p><strong>Location:</strong> <%= booking.location %></p>
            <p>
              <strong>Tour Date:</strong> <%= booking.tour_date.getDate() %>
            </p>
            <p><strong>Guest number:</strong> <%= booking.max_capacity %></p>
            <p><strong>Description:</strong> <%= booking.description %></p>
            <p>
              <strong>Price:</strong> <%= booking.price %> <%= booking.currency
              %>
            </p>
          </div>
          <img
            class="booking-image"
            src="<%= booking.image_url %>"
            alt="Booking Image"
          />
        </div>
      </div>
      <% }); %>
    </div>
  </body>
</html>
