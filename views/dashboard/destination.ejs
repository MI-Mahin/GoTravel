    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const startDateInput = document.querySelector('input[name="date"]');
        const endDateInput = document.querySelector('input[name="endDate"]');

        // Add an event listener to the form for form submission
        document
          .querySelector("form")
          .addEventListener("submit", function (event) {
            // Get the current date
            const currentDate = new Date();
            currentDate.setHours(0, 0, 0, 0); // Set hours, minutes, seconds, and milliseconds to 0 for comparison

            // Get the selected start date and end date
            const selectedStartDate = new Date(startDateInput.value);
            const selectedEndDate = new Date(endDateInput.value);

            // Check if the selected start date or end date is in the past
            if (
              selectedStartDate < currentDate ||
              selectedEndDate < currentDate
            ) {
              // Prevent form submission
              event.preventDefault();

              // Display an error message to the user
              alert("Please select a date that is at least the current date.");
            } else if (
              selectedStartDate.getTime() === selectedEndDate.getTime()
            ) {
              event.preventDefault();
              alert("Please select a date that is greater than start date.");
            }
          });
      });
