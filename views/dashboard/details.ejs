<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      src="https://kit.fontawesome.com/c1df782baf.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="styles.css" />
    <title>Tour Package Details</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f2f2f2;
        font-family: "Poppins", sans-serif;
        margin: 0;
        padding: 20px;
      }
      .card {
        width: 100%;
        max-width: 1000px; /* Limit the max-width for larger screens */
        background: #fff;
        padding: 1rem;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
        border-radius: 0.5rem;
        text-align: center;
        position: relative;
      }
      h1 {
        color: #333;
        font-size: 24px;
        margin-bottom: 10px;
      }
      p {
        color: #666;
        margin-bottom: 5px;
      }
      form {
        margin-top: 20px;
        text-align: center;
      }
      label {
        display: block;
        margin-bottom: 5px;
      }
      input[type="number"] {
        width: 100px;
        padding: 5px;
        border: 1px solid #ccc;
        border-radius: 3px;
      }
      button[type="submit"] {
        padding: 10px 20px;
        background-color: #333;
        color: #fff;
        border: none;
        border-radius: 3px;
        cursor: pointer;
      }
      #bookingConfirmation {
        margin-top: 20px;
        padding: 10px;
        background-color: #f9f9f9;
        border: 1px solid #ccc;
        border-radius: 3px;
        text-align: center;
      }
      .center-container {
        display: flex;
        justify-content: center;
        width: 100%;
      }
      .center-image {
        margin: auto;
        display: block;
        width: 70%; /* Make image width 100% of the card */
        height: 400px;
        border-radius: 0.5rem;
      }
      .rating-container {
        position: absolute;
        bottom: 10px;
        left: 10px;
        text-align: left;
      }
      .rating-text {
        font-size: 14px;
        color: #333;
      }
      .stars {
        display: flex;
        font-size: 1.5rem; /* Smaller star size */
        color: #ccc;
      }
      .stars .star {
        color: gold;
      }
    </style>
  </head>
  <body>
    <div class="card">
      <h1><%= tourPackage.package_name %></h1>
      <div class="center-container">
        <img
          class="center-image"
          src="<%= tourPackage.image_url %>"
          alt="Package Image"
        />
      </div>
      <p>Location: <%= tourPackage.location %></p>
      <p>Tour Date: <%= tourPackage.tour_date %></p>
      <p>Max Capacity: <%= tourPackage.max_capacity %></p>
      <p>Description: <%= tourPackage.description %></p>
      <p>Price: <%= tourPackage.price %> <%= tourPackage.currency %></p>

      <form id="bookingForm" method="post">
        <input
          type="hidden"
          id="packageId"
          name="packageId"
          value="<%= tourPackage.package_id %>"
        />
        <label for="numberOfPeople">Number of People:</label>
        <input
          type="number"
          id="numberOfPeople"
          name="numberOfPeople"
          required
        />
        <button type="submit">Book Now</button>
      </form>
      <div id="bookingConfirmation" style="display: none">
        Booking confirmed! Thank you for choosing our tour package.
      </div>

      <!-- Ratings Display -->
      <div class="rating-container">
        <div class="rating-text">User Rating: <%= rating %> / 5</div>
        <div class="stars" data-rating="<%= rating %>"></div>
      </div>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const starsContainer = document.querySelector(".stars");
        const rating = parseFloat(starsContainer.getAttribute("data-rating"));
        const fullStars = Math.floor(rating);
        const halfStar = rating % 1 !== 0;

        for (let i = 0; i < 5; i++) {
          const star = document.createElement("span");
          star.classList.add("fa", "fa-star");
          if (i < fullStars) {
            star.classList.add("star");
          } else if (i === fullStars && halfStar) {
            star.classList.add("fa-star-half-alt", "star");
          }
          starsContainer.appendChild(star);
        }
      });
    </script>
  </body>
</html>
